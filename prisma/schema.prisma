generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Portfolio {
  id          Int              @id @default(autoincrement())
  title       String
  slug        String   @unique
  thumbnail   String
  shortDesc   String? 
  content     String
  createdAt   DateTime @default(now())
  gallery     GalleryImage[]
}

model GalleryImage {
  id           Int        @id @default(autoincrement())
  imageUrl     String
  portfolio    Portfolio  @relation(fields: [portfolioId], references: [id])
  portfolioId  Int
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
}


model HomePageContent {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String
}

model ContactMessage {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  message     String
  createdAt   DateTime @default(now())
}

enum Role {
  admin
  superadmin
}


model Admin {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role     @default(admin)
  createdAt  DateTime @default(now())
}
