generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Portfolio {
  id        Int            @id @default(autoincrement())
  title     String
  slug      String         @unique
  thumbnail String
  content   String
  createdAt DateTime       @default(now())
  shortDesc String?
  gallery   GalleryImage[] // ðŸ‘ˆ Ú¯Ø§Ù„Ø±ÛŒ Ø¨Ù‡â€ŒØµÙˆØ±Øª Ø§Ø±ØªØ¨Ø§Ø·ÛŒ
}

model GalleryImage {
  id          Int       @id @default(autoincrement())
  imageUrl    String
  portfolioId Int
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
}
model Service {
  id    Int    @id @default(autoincrement())
  title String
}

model HomePageContent {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(admin)
}

model Image {
  id        String   @id @default(uuid())
  url       String
  hash      String   @unique
  createdAt DateTime @default(now())
}

enum Role {
  admin
  superadmin
}
